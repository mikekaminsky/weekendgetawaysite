<h1>Listing Flights</h1>
 
<table id="flights_table">
  <thead>
    <tr>
      <th>Origin</th>
      <th>Destination</th>
      <th>Departure</th>
      <th>Return</th>
      <th>Price</th>
      <th>Outbound Duration</th>
      <th>Return Duration</th>
      <th>Outbound Legs</th>
      <th>Return Legs</th>
    </tr>
  </thead>
  <tbody>
  <% @flights.each do |flight| %>
    <tr>
      <td><%= flight.trip.origin_city %></td>
      <td><%= flight.trip.destination_city %></td>
      <td><%= flight.trip.departure_date %></td>
      <td><%= flight.trip.return_date %></td>
      <td><%= flight.price %></td>
      <td><%= flight.outbound_duration %></td>
      <td><%= flight.return_duration %></td>
      <td><%= flight.outbound_legs %></td>
      <td><%= flight.return_legs %></td>
    </tr>
  <% end %>
  </tbody>
</table>
 
